@page
@model IndexModel
@{
  ViewData["Title"] = "Customer List";
}
<h2 class="font-bold text-3xl mb-4">Customers</h2>
<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-1">
  @if (Model.Customers.Count() == 0)
  {
    <li>No Customers Found</li>
  }
  else
  {
    @foreach (var c in Model.Customers)
    {
      <li class="rounded border border-gray-400 p-1 hover:bg-gray-800 cursor-pointer text-white">
        <div class="font-bold">@c.CompanyName</div>
        <div><strong class="inline-block w-[4.5rem]">tel:</strong>@c.Phone</div>
        <div><strong class="inline-block w-[4.5rem]">contact:</strong>@c.ContactName</div>
        @if (c.Address is not null)
        {
          <div class="ml-4 text-sm">
            <div>
              @c.Address.Address1
            </div>
            @if (c.Address.Address2 is not null)
            {
              <div>
                @c.Address.Address2 <br />
              </div>
            }
            <div>
              @c.Address.City<raw>,&nbsp;</raw>@c.Address.StateProvince<raw>&nbsp;</raw>@c.Address.PostalCode
            </div>
          </div>
        }
      </li>
    }
  }
</ul>